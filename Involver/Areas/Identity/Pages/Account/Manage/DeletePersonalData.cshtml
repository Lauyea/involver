@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "刪除個人資料";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>刪除資料會永久的移除你的帳號，而且不能恢復。</strong>
    </p>
    <p>
        <strong>同時會刪除你在網站上發表的所有資訊。</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="mb-3 needs-recaptcha" data-sitekey="@Configuration["reCAPTCHA-SiteKey"]" data-action="DeletePersonalData">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">刪除並關閉帳號</button>
    </form>
</div>

@section Scripts {
}