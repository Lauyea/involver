@page
@model Involver.Areas.Identity.Pages.Profile.ArticlesModel
@{
    ViewData["Title"] = "文章";
    ViewData["ActivePage"] = ManageNavPages.Articles;
    ViewData["ProfileID"] = Model.Profile.ProfileID;
    if (!string.IsNullOrEmpty(Model.Profile.BannerImageUrl))
    {
        ViewData["BannerImageUrl"] = Model.Profile.BannerImageUrl;
    }
}

<div class="row">
    <div class="col-md-12">
        @if (Model.Articles != null)
        {
            foreach (var article in Model.Articles)
            {
                <div class="row">
                    <div class="col-md-6">
                        <a asp-page="/Novels/Details" asp-route-id="@article.ArticleID">@Html.DisplayFor(modelItem => article.Title)</a>
                    </div>
                    <div class="col-md-3">
                        <p>
                            <small>總計 @Html.DisplayFor(modelItem => article.TotalCoins)</small>
                        </p>
                        <small>月計 @Html.DisplayFor(modelItem => article.MonthlyCoins)</small>
                    </div>
                    <div class="col-md-3" title="@article.UpdateTime">
                        <p>
                            <small>@TimePeriodHelper.Get(article.UpdateTime)</small>
                        </p>
                        <small>觀看數： @Html.DisplayFor(modelItem => article.TotalViews)</small>
                    </div>
                </div>
                <hr />
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}