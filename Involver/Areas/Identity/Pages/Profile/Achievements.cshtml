@page
@model Involver.Areas.Identity.Pages.Profile.AchievementsModel
@{
    ViewData["Title"] = "成就";
    ViewData["ActivePage"] = ManageNavPages.Achievements;
    ViewData["ProfileID"] = Model.Profile.ProfileID;
    ViewData["ProfileName"] = Model.Profile.UserName;
    if (!string.IsNullOrEmpty(Model.Profile.BannerImageUrl))
    {
        ViewData["BannerImageUrl"] = Model.Profile.BannerImageUrl;
    }
}

<h4>@ViewData["Title"]</h4>
<hr />
<dl class="row">
    @foreach(var item in Model.Achievements)
    {
        <dt class="col-sm-5">
            @item.Title
        </dt>
        <dd class="col-sm-7">
            @item.ProfileAchievements.FirstOrDefault().AchieveDate
        </dd>
    }
</dl>