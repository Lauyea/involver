@model Involver.Areas.Identity.Pages.Profile.InvolvingModel.InvolvingPageViewModel

@foreach (var involving in Model.Involvings)
{
    <div class="row">
        <div class="col-md-2">
            <b>@involving.Type</b>
        </div>
        <div class="col-md-5">
            <a asp-page="@involving.LinkPage"
               asp-route-id="@involving.LinkID">
                @if (!string.IsNullOrEmpty(involving.ImageUrl))
                {
                    <img src="@involving.ImageUrl"
                         alt="Image"
                         title="@involving.Title"
                         style="width: 25%; height: auto; display:inline; border-radius:10%">
                }
                @involving.Title
            </a>
        </div>
        <div class="col-md-2">
            @if (Model.TimeSpan == "TotalTime")
            {
                @involving.TotalValue
            }
            else if (Model.TimeSpan == "Monthly")
            {
                @involving.MonthlyValue
            }
            else
            {
                @involving.RecentValue
            }
            Inå¹£
        </div>
        <div class="col-md-3" title="@involving.LastTime">
            @Involver.Helpers.TimePeriodHelper.Get(involving.LastTime)
        </div>
    </div>
    <hr />
}
