@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    string bannerImageUrl = null;
    if (ViewData["BannerImageUrl"] != null)
    {
        bannerImageUrl = ViewData["BannerImageUrl"].ToString();
    }
}

<h1>@ViewData["ProfileName"]</h1>

<div>
    <h4>個人檔案</h4>
    @if (bannerImageUrl != null)
    {
        <div class="text-center">
            <img src="@bannerImageUrl"
                 asp-append-version="true"
                 alt="讀取失敗"
                 title="@Model.Profile.UserName"
                 style="max-width:100%; max-height: 200px; display:inline; border-radius:25px">
        </div>
    }
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
