@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    string bannerImageUrl = null;
    if (ViewData["BannerImageUrl"] != null)
    {
        bannerImageUrl = ViewData["BannerImageUrl"].ToString();
    }
}

<div>
    @if (bannerImageUrl != null)
    {
        <div class="text-center">
            <div title="@Model.Profile.UserName"
             style="width:100%; height: 300px; border-radius:25px;background-image:url(@bannerImageUrl);background-size: cover;background-position: 50%;">
            </div>
        </div>
    }
    <div class="card mx-auto" style="margin-top:-4rem;width:90%;border-radius: 0.75rem;">
        <div class="card-body row">
            <div class="col-md-3 my-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
