@page
@model Involver.Pages.Votings.CreateModel

@{
    ViewData["Title"] = "建立";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>建立</h1>

<h4>投票</h4>
<hr />
@*<div>
    <a asp-page="../Episodes/Details" asp-route-id="@Model.Voting.EpisodeID"><i class="fas fa-chevron-left"></i>回到章節</a>
</div>*@
<p></p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.ErrorMessage != null)
            {
                <div class="text-danger">@Model.ErrorMessage</div>
            }
            @if (Model.Profile.Professioal)
            {
                <div class="form-group">
                    <label asp-for="Voting.Policy" class="control-label"
                           title="平等：票票等值，自由：票值不限"></label>
                    <select asp-for="Voting.Policy" class="form-control" asp-items="Model.Policys"></select>
                    <span asp-validation-for="Voting.Policy" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Voting.Limit" class="control-label"
                       title="限時：時間有限，限量：數量有限，限值：總值有限"></label>
                <select asp-for="Voting.Limit" class="form-control" asp-items="Model.Limits"></select>
                <span asp-validation-for="Voting.Limit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voting.Threshold" class="control-label"></label>
                <input asp-for="Voting.Threshold" class="form-control" />
                <span asp-validation-for="Voting.Threshold" class="text-danger"></span>
                <div class="alert alert-warning" role="alert">
                    <p>
                        <strong>票價設定為零，則等於所有人都可投票</strong>
                    </p>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Voting.NumberLimit" class="control-label">人數上限 (限量) (三選一)</label>
                <input asp-for="Voting.NumberLimit" class="form-control" />
                <span asp-validation-for="Voting.NumberLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voting.CoinLimit" class="control-label">總InCoins上限 (限值) (三選一)</label>
                <input asp-for="Voting.CoinLimit" class="form-control" />
                <span asp-validation-for="Voting.CoinLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voting.DeadLine" class="control-label">期限 (限時) (三選一)</label>
                <input asp-for="Voting.DeadLine" class="form-control" />
                <span asp-validation-for="Voting.DeadLine" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Voting.Title" class="control-label"></label>
                <textarea asp-for="Voting.Title" class="form-control" rows="1" placeholder="在這裡寫些東西..."></textarea>
                <span asp-validation-for="Voting.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NormalOption1.Content" class="control-label"></label>
                <textarea asp-for="NormalOption1.Content" class="form-control" rows="1" placeholder="在這裡寫些東西..."></textarea>
                <span asp-validation-for="NormalOption1.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NormalOption2.Content" class="control-label"></label>
                <textarea asp-for="NormalOption2.Content" class="form-control" rows="1" placeholder="在這裡寫些東西..."></textarea>
                <span asp-validation-for="NormalOption2.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NormalOption3.Content" class="control-label"></label>
                <textarea asp-for="NormalOption3.Content" class="form-control" rows="1" placeholder="在這裡寫些東西..."></textarea>
                <span asp-validation-for="NormalOption3.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="建立" class="btn btn-primary" />
                <div class="alert alert-warning" role="alert">
                    <p>
                        <strong>一旦建立就無法編輯與刪除，請小心警慎地確認資料是否正確</strong>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
