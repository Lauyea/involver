@page
@model Involver.Pages.Announcements.DeleteModel

@{
    ViewData["Title"] = "刪除";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>刪除</h1>

<h3>你確定要刪除嗎？</h3>
<div>
    <h4>公告</h4>
    <form method="post">
        <a asp-page="./Details" asp-route-id="@Model.Announcement.ArticleID"
           class="btn btn-xs btn-outline-info"><i class="fas fa-chevron-up"></i> 回到文章</a>&nbsp&nbsp
        <a asp-page="./Index" class="btn btn-xs btn-outline-info"><i class="fas fa-chevron-left"></i>回到清單</a>&nbsp&nbsp
        <input type="hidden" asp-for="Announcement.ArticleID" />
        <input type="submit" value="刪除" class="btn btn-danger" />
    </form>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Announcement.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Announcement.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Announcement.Profile.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Announcement.Profile.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Announcement.Content)
        </dt>
        <dd class="col-sm-10 ck-content">
            @Html.AntiXssRaw(Model.Announcement.Content.Replace("\r\n", "<br />"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Announcement.Views)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Announcement.Views)
        </dd>
    </dl>
</div>
