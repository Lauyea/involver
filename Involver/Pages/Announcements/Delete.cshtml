@page
@model Involver.Pages.Announcements.DeleteModel

@{
    ViewData["Title"] = "刪除公告";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h1 class="mb-0">刪除確認</h1>
            </div>
            <div class="card-body">
                <h5 class="card-title">你確定要刪除這則公告嗎？</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Announcement.Title)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Announcement.Title)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Announcement.Profile.UserName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Announcement.Profile.UserName)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Announcement.Content)</dt>
                    <dd class="col-sm-9 ck-content">@Html.Raw(Model.Announcement.Content.Substring(0, Math.Min(Model.Announcement.Content.Length, 100))) ...</dd>
                </dl>
            </div>
            <div class="card-footer bg-transparent border-danger">
                <form method="post" class="d-flex justify-content-end">
                    <input type="hidden" asp-for="Announcement.ArticleID" />
                    <a asp-page="./Details" asp-route-id="@Model.Announcement.ArticleID" class="btn btn-secondary me-2">取消</a>
                    <input type="submit" value="刪除" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>