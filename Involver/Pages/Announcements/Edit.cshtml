@page
@model Involver.Pages.Announcements.EditModel
@using Microsoft.AspNetCore.Identity
@using Involver.Common

@inject UserManager<InvolverUser> userManager

@{
    ViewData["Title"] = "編輯公告";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string UserID = userManager.GetUserId(User);
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">編輯公告</h1>
                    <div>
                        <a asp-page="./Details" asp-route-id="@Model.Announcement.ArticleID" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i> 回到公告</a>
                        <a asp-page="./Index" class="btn btn-sm btn-outline-secondary"><i class="fas fa-list"></i> 回到清單</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" class="needs-recaptcha" data-sitekey="@Configuration["reCAPTCHA-SiteKey"]" data-action="EditArticle">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Announcement.ArticleID" />
                    <input type="hidden" value="@UserID" asp-for="Announcement.ProfileID" />
                    <div class="form-group">
                        <label asp-for="Announcement.Title" class="control-label"></label>
                        <input asp-for="Announcement.Title" class="form-control" />
                        <span asp-validation-for="Announcement.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Announcement.Content" class="control-label"></label>
                        <textarea asp-for="Announcement.Content" id="editor" class="form-control" rows="12" placeholder="在這裡寫些東西..."></textarea>
                        <div id="word-count" class="text-right text-muted"></div>
                        <span asp-validation-for="Announcement.Content" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <input type="submit" value="儲存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["reCAPTCHA-SiteKey"]" async defer></script>
    @{
        ViewData["EditorId"] = "editor";
        ViewData["WordCountDivId"] = "word-count";
        ViewData["MaxLength"] = Parameters.ArticleLength;
        await Html.RenderPartialAsync("_ClassicEditorPartial");
    }
}