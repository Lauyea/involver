@page
@model Involver.Pages.Announcements.CreateModel

@{
    ViewData["Title"] = "建立公告";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string UserID = userManager.GetUserId(User);
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">建立公告</h1>
            </div>
            <div class="card-body">
                <form method="post" class="needs-recaptcha" data-sitekey="@Configuration["reCAPTCHA_SiteKey"]" data-action="CreateArticle">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Announcement.Title" class="form-label"></label>
                        <input asp-for="Announcement.Title" class="form-control" />
                        <span asp-validation-for="Announcement.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Announcement.Content" class="form-label"></label>
                        <textarea asp-for="Announcement.Content" id="editor" class="form-control" rows="12" placeholder="在這裡寫些東西..."></textarea>
                        <div id="word-count" class="text-end text-body-secondary"></div>
                        <span asp-validation-for="Announcement.Content" class="text-danger"></span>
                    </div>
                    <input type="hidden" value="@UserID" asp-for="Announcement.ProfileID" />
                    <div class="mb-3 d-flex justify-content-end">
                        <a asp-page="Index" class="btn btn-secondary me-2">返回清單</a>
                        <input type="submit" value="建立" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["reCAPTCHA_SiteKey"]" async defer></script>
    @{
        ViewData["EditorId"] = "editor";
        ViewData["WordCountDivId"] = "word-count";
        ViewData["MaxLength"] = Parameters.ArticleLength;
        await Html.RenderPartialAsync("_ClassicEditorPartial");
    }
}