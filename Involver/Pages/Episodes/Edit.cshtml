@page
@model Involver.Pages.Episodes.EditModel
@using Involver.Common

@{
    ViewData["Title"] = "編輯章節";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">編輯章節</h1>
                    <a asp-page="./Details" asp-route-id="@Model.Episode.EpisodeID" class="btn btn-sm btn-outline-secondary"><i class="fas fa-eye"></i> 回到章節</a>
                </div>
            </div>
            <div class="card-body">
                <form method="post" class="needs-recaptcha" data-sitekey="@Configuration["reCAPTCHA_SiteKey"]" data-action="EditEpisode">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Episode.EpisodeID" />
                    <div class="mb-3">
                        <label asp-for="Episode.Title" class="form-label"></label>
                        <input asp-for="Episode.Title" class="form-control" />
                        <span asp-validation-for="Episode.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Episode.Content" class="form-label"></label>
                        <textarea asp-for="Episode.Content" id="editor" class="form-control" rows="12" placeholder="在這裡寫些東西..."></textarea>
                        <div id="word-count" class="text-end text-body-secondary"></div>
                        <span asp-validation-for="Episode.Content" class="text-danger"></span>
                    </div>
                    <div class="mb-3 d-flex justify-content-end">
                        <a asp-page="./Details" asp-route-id="@Model.Episode.EpisodeID" class="btn btn-secondary me-2">取消</a>
                        <input type="submit" value="儲存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["reCAPTCHA_SiteKey"]" async defer></script>
    @{
        ViewData["EditorId"] = "editor";
        ViewData["WordCountDivId"] = "word-count";
        ViewData["MaxLength"] = Parameters.ArticleLength;
        await Html.RenderPartialAsync("_ClassicEditorPartial");
    }
}