@page "{id}"
@model Involver.Pages.Episodes.DeleteModel

@{
    ViewData["Title"] = "刪除章節";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h1 class="mb-0">刪除確認</h1>
            </div>
            <div class="card-body">
                <h5 class="card-title">你確定要刪除這個章節嗎？</h5>
                <p class="text-danger">此操作無法復原。</p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Episode.Title)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Episode.Title)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Episode.Content)</dt>
                    <dd class="col-sm-9 ck-content">@Html.Raw(Model.Episode.Content.Substring(0, Math.Min(Model.Episode.Content.Length, 100))) ...</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Episode.UpdateTime)</dt>
                    <dd class="col-sm-9">@Model.Episode.UpdateTime.ToShortDateString()</dd>
                </dl>
            </div>
            <div class="card-footer bg-transparent border-danger">
                <form method="post" class="d-flex justify-content-end">
                    <input type="hidden" asp-for="Episode.EpisodeID" />
                    <a asp-page="./Details" asp-route-id="@Model.Episode.EpisodeID" class="btn btn-secondary mr-2">取消</a>
                    <input type="submit" value="刪除" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>