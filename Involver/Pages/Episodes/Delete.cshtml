@page
@model Involver.Pages.Episodes.DeleteModel

@{
    ViewData["Title"] = "刪除";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>刪除</h1>

<h3>你確定要刪除嗎？</h3>
<div>
    <h4>章節</h4>
    <form method="post">
        <a asp-page="./Details" asp-route-id="@Model.Episode.EpisodeID">回到文章</a> |
        <input type="hidden" asp-for="Episode.EpisodeID" />
        <input type="submit" value="刪除" class="btn btn-danger" />
    </form>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episode.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.Content)
        </dt>
        <dd class="col-sm-10 ck-content">
            @Html.AntiXssRaw(Model.Episode.Content.Replace("\r\n", "<br />"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.UpdateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episode.UpdateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Episode.Views)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episode.Views)
        </dd>
    </dl>
</div>
