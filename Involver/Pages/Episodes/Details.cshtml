@page
@using DataAccess.Models.NovelModel
@using Involver.Authorization
@using Involver.Common
@using Involver.Helpers
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@model Involver.Pages.Episodes.DetailsModel

@{ 
    ViewData["Title"] = Model.Episode.Title;
    ViewData["From"] = Parameters.Episodes;
    ViewData["FromId"] = Model.Episode.EpisodeID;
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["ReturnRightFunction"] = false;
}

<partial name="_Toasts" model="Model.Toasts" />
<partial name="_StatusMessage" model="Model.StatusMessage" />

<nav aria-label="Episode navigation" class="d-flex justify-content-between align-items-center mb-3" style="background:none;">
    @if (Model.PreviousEpisode != null)
    {
        <a asp-page="./Details" asp-route-id="@Model.PreviousEpisode.EpisodeID" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> 上一章</a>
    }
    else
    {
        <a class="btn btn-outline-secondary disabled" href="#"><i class="fas fa-arrow-left"></i> 上一章</a>
    }
    @* <a asp-page="../Novels/Details" asp-route-id="@Model.Novel.NovelID" asp-fragment="EpisodesHead" class="btn btn-primary"><i class="fas fa-list-ol"></i> 回到目錄</a> *@
    @if (Model.NextEpisode != null)
    {
        <a asp-page="./Details" asp-route-id="@Model.NextEpisode.EpisodeID" class="btn btn-outline-secondary">下一章 <i class="fas fa-arrow-right"></i></a>
    }
    else
    {
        <a class="btn btn-outline-secondary disabled" href="#">下一章 <i class="fas fa-arrow-right"></i></a>
    }
</nav>

<div class="card mb-4">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0 text-break">@Html.DisplayFor(model => model.Episode.Title)</h1>
            <div class="d-flex justify-content-end flex-wrap">
                <a asp-page="../Novels/Details" asp-route-id="@Model.Novel.NovelID" asp-fragment="EpisodesHead" class="btn btn-sm btn-outline-secondary m-1" title="回到目錄">
                    <i class="fas fa-list"></i>
                </a>
                <a href="#CommentHead" class="btn btn-sm btn-outline-info m-1" title="評論"><i class="fas fa-comment"></i></a>
                @if (Model.CanCreateVoting || Model.Votings.Any())
                {
                    <a href="#voting-app" class="btn btn-sm btn-outline-success m-1" title="投票"><i class="fas fa-vote-yea"></i></a>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Model.Novel, NovelOperations.Update)).Succeeded)
                {
                    <a asp-page="./Edit" asp-route-id="@Model.Episode.EpisodeID" class="btn btn-sm btn-outline-primary m-1" title="編輯"><i class="fas fa-edit"></i></a>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Model.Novel, NovelOperations.Delete)).Succeeded)
                {
                    <a asp-page="./Delete" asp-route-id="@Model.Episode.EpisodeID" class="btn btn-sm btn-outline-danger m-1" title="刪除"><i class="fas fa-trash-alt"></i></a>
                }
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="text-muted mb-3">
            <small>發布於：<span title="@Model.Episode.UpdateTime">@TimePeriodHelper.Get(Model.Episode.UpdateTime)</span></small>
            <small class="ml-3">觀看數：@Html.DisplayFor(model => model.Episode.Views)</small>
        </div>
        <article class="ck-content">
            @if (Model.Episode.Content != null)
            {
                @Html.AntiXssRaw(Model.Episode.Content.Replace("\r\n", "<br />"))
            }
        </article>
    </div>
    <div class="card-footer">
        @{
            string shareUrl = $"https://involver.tw/Episodes/Details?id={Model.Episode.EpisodeID}";
        }
        <div class="d-flex justify-content-between align-items-center">
            <div>
                @if ((await AuthorizationService.AuthorizeAsync(User, Model.Novel, NovelOperations.Update)).Succeeded)
                {
                    <button id="copyMarkdownBtn" class="btn btn-sm btn-outline-info m-1" title="複製 Markdown" data-episode-id="@Model.Episode.EpisodeID">
                        <i class="fas fa-clipboard"></i> 複製 Markdown
                    </button>
                }
            </div>
            
            <div class="d-flex align-items-center">
                <button class="btn btn-sm btn-outline-secondary btn-copy-link mr-2"
                        data-type="Episode"
                        data-id="@Model.Episode.EpisodeID"
                        type="button"
                        title="複製連結成功">
                    <i class="fas fa-copy"></i> 分享
                </button>
                <div class="fb-share-button d-none d-md-inline-block" data-href="@shareUrl" data-layout="button_count"></div>
            </div>
        </div>
    </div>
</div>

<nav aria-label="Episode navigation" class="d-flex justify-content-between align-items-center mb-4" style="background:none;">
    @if (Model.PreviousEpisode != null)
    {
        <a asp-page="./Details" asp-route-id="@Model.PreviousEpisode.EpisodeID" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> 上一章</a>
    }
    else
    {
        <a class="btn btn-outline-secondary disabled" href="#"><i class="fas fa-arrow-left"></i> 上一章</a>
