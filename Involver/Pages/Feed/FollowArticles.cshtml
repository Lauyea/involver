@page
@model Involver.Pages.Feed.FollowArticlesModel
@{
    ViewData["Title"] = "屬於每個人的創作";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h4>追蹤</h4>
        <hr />
        <a asp-page="/Index"
           class="btn btn-xs btn-outline-info">創作</a>
        &nbsp&nbsp
        <a asp-page="/Feed/FollowArticles"
           asp-route-id="@Model.UserProfileID"
           class="btn btn-xs btn-info disabled">討論</a>
        <hr />
    </div>
    <div class="col-4">
        <h4>熱門</h4>
        <hr />
        <a asp-page="/Feed/TrendingCreations"
           asp-route-id="@Model.UserProfileID"
           class="btn btn-xs btn-outline-danger">創作</a>
        <hr />
    </div>
    <div class="col-4">
        <h4>推薦</h4>
        <hr />
        <a asp-page="/Feed/RecommendCreations"
           asp-route-id="@Model.UserProfileID"
           class="btn btn-xs btn-secondary disabled">創作</a>
        <hr />
    </div>
</div>
<p></p>
<div>
    @if (Model.Articles != null)
    {
        @foreach (var article in Model.Articles)
        {
            <div class="row">
                <div class="col-md-5">
                    <a asp-page="/Articles/Details"
                       asp-route-id="@article.ArticleID">
                        @Html.DisplayFor(modelItem => article.Title)
                    </a>
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => article.Profile.UserName)
                </div>
                <div class="col-md-3">
                    @Html.DisplayFor(modelItem => article.UpdateTime)
                </div>
            </div>
            <hr />
        }
    }
</div>

