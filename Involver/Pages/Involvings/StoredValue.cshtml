@page
@model Involver.Pages.Involvings.StoredValueModel
@{
    ViewData["Title"] = "儲值";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string UserID = userManager.GetUserId(User);
}

<div class="container py-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <!-- ECPay form is rendered here if it exists in TempData -->
    @if (TempData["PostForm"] != null)
    {
        <div class="d-none">
            @Html.AntiXssRaw((string)TempData["PostForm"])
        </div>
    }

    <div class="row justify-content-center g-4">
        <!-- Patreon Column -->
        <div class="col-lg-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">替代方案：Patreon 贊助</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        由於履約保證申請流程，目前站內儲值暫停，請暫時使用 Patreon 贊助。
                    </div>
                    <div class="alert alert-danger mt-auto">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>注意：</strong>Patreon 贊助金額<strong>不會</strong>轉換為站內實體In幣。
                    </div>
                    <div class="d-grid mt-3">
                        <a href="https://www.patreon.com/Lauyea" class="btn btn-lg text-white" target="_blank" style="background-color: #FF424D;">
                            <i class="fab fa-patreon me-2"></i> 前往 Patreon 贊助
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- ECPay Column -->
        <div class="col-lg-5">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">綠界支付 (尚未啟用)</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="text-muted">此功能目前已停用。</p>
                    <form method="post" class="needs-recaptcha" data-sitekey="@Configuration["reCAPTCHA-SiteKey"]" data-action="StoredValue">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <label asp-for="Quantity" class="form-label">購買數量</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">實體 150 In幣 ×</span>
                            <input asp-for="Quantity" class="form-control" disabled />
                        </div>
                        <span asp-validation-for="Quantity" class="text-danger"></span>

                        <input type="hidden" value="@UserID" asp-for="UserID" />
                        
                        <div class="alert alert-warning small mt-auto">
                            <ul class="mb-0">
                                <li>儲值概不接受退款，建議小金額儲值。</li>
                                <li>按下支付按鈕後將跳轉至綠界頁面，完成後您的實體In幣將會自動增加。</li>
                            </ul>
                        </div>
                        <div class="d-grid mt-3">
                            <input type="submit" value="綠界支付 (已停用)" class="btn btn-primary" formtarget="_blank" disabled />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["reCAPTCHA-SiteKey"]" async defer></script>
    <script>
        // Optional: Script to auto-submit the ECPay form if it exists
        document.addEventListener("DOMContentLoaded", function() {
            const ecpayForm = document.querySelector('form[name="ECPayForm"]');
            if(ecpayForm) {
                ecpayForm.submit();
            }
        });
    </script>
}
