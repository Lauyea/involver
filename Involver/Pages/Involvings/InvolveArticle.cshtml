@page
@model Involver.Pages.Involvings.InvolveArticleModel
@{
    ViewData["Title"] = "Involve";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string UserID = userManager.GetUserId(User);
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <a asp-page="../Articles/Details"
       asp-route-id="@Model.ArticleID"
       class="btn btn-xs btn-outline-info">
        <i class="fas fa-chevron-left"></i> 回到文章
    </a>
</div>
<p></p>
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">In幣</label>
                <input asp-for="Involving.Value"
                       class="form-control" />
                <span asp-validation-for="Involving.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">
                    <input class="form-check-input"
                           style="display:none"
                           value="@UserID"
                           asp-for="Involving.InvolverID" />
                </label>
            </div>
            <p></p>
            <input type="submit" value="Involve" class="btn btn-outline-danger" onclick="onSubmit()" />
        </form>
    </div>
    <div class="col-md-4">
        <div>
            <b>Involve文章</b>
            <p>@Model.Article.Title</p>
        </div>
        <div>
            <b>文章作者</b>
            <p>@Model.Article.Profile.UserName</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function onSubmit(token) {
            // 使用 HTML 5 Constraint Validation 做客戶端驗證
            if (!form.checkValidity()) {

                // 因為 CKEditor 會隱藏原來的 textarea 而無法 focus，會導致 reportValidity 失敗，需要先自行檢查 editor 是否為空
                if (!window.editor.getData().trim()) {
                    alert("內容不能為空。");
                    grecaptcha.reset();
                    return;
                }

                // 如果驗證失敗，呼叫 reportValidity()
                // 這會強制瀏覽器顯示原生的驗證錯誤泡泡
                form.reportValidity();

                // 停止執行，不提交表單
                return;
            }

            document.getElementById("form").submit();
        }
    </script>
}
