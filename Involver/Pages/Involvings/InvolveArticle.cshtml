@page
@model Involver.Pages.Involvings.InvolveArticleModel
@{
    ViewData["Title"] = "Involve";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string UserID = userManager.GetUserId(User);
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <a asp-page="../Articles/Details"
       asp-route-id="@Model.ArticleID"
       class="btn btn-xs btn-outline-info">
        <i class="fas fa-chevron-left"></i> 回到文章
    </a>
</div>
<p></p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">In幣</label>
                <input asp-for="Involving.Value"
                       class="form-control" />
                <span asp-validation-for="Involving.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">
                    <input class="form-check-input"
                           style="display:none"
                           value="@UserID"
                           asp-for="Involving.InvolverID" />
                </label>
            </div>
            <p></p>
            <input type="submit" value="Involve" class="btn btn-outline-danger" />
        </form>
    </div>
    <div class="col-md-4">
        <div>
            <b>Involve文章</b>
            <p>@Model.Article.Title</p>
        </div>
        <div>
            <b>文章作者</b>
            <p>@Model.Article.Profile.UserName</p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
