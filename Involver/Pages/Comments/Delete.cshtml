@page
@model Involver.Pages.Comments.DeleteModel

@{
    ViewData["Title"] = "刪除";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>刪除</h1>

<h3>確定要刪除嗎？</h3>
<div>
    <h4>評論</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Comment.Content.Replace("\r\n", "<br />"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.UpdateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment.UpdateTime)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Comment.CommentID" />
        <input type="submit" value="刪除" class="btn btn-danger" />
        @*<a asp-page="./Index">Back to List</a>*@
    </form>
</div>
