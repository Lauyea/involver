@page "{id}"
@model Involver.Pages.Novels.EditModel
@using Involver.Common

@{
    ViewData["Title"] = "編輯創作";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">編輯：@Model.Novel.Title</h1>
                    <a asp-page="./Details" asp-route-id="@Model.Novel.NovelID" class="btn btn-sm btn-outline-secondary"><i class="fas fa-eye"></i> 回到作品</a>
                </div>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    <input type="hidden" asp-for="Novel.NovelID" />
                    <input type="hidden" asp-for="Novel.ProfileID" />
                    <input type="hidden" asp-for="Novel.Title" />

                    <div class="form-group">
                        <label asp-for="Novel.Introduction" class="control-label"></label>
                        <textarea asp-for="Novel.Introduction" class="form-control" rows="6" placeholder="在這裡寫些東西..."></textarea>
                        <span asp-validation-for="Novel.Introduction" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Novel.ImageUrl" class="control-label"></label>
                        <input asp-for="Novel.ImageUrl" class="form-control">
                        <span asp-validation-for="Novel.ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Novel.Type" class="control-label"></label>
                        <select asp-for="Novel.Type" asp-items="Model.Types" class="custom-select"></select>
                        <span asp-validation-for="Novel.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagString" class="control-label"></label>
                        <input asp-for="TagString" class="form-control" />
                        <span asp-validation-for="TagString" class="text-danger"></span>
                        <small class="form-text text-muted">
                            請用半形逗號 (,) 分隔每個標籤，例如：標籤1,標籤2,標籤3。<br />
                            最多 @Parameters.TagSize 個標籤，每個標籤長度不超過 @Parameters.TagNameMaxLength 個字。
                        </small>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Novel.PrimeRead" />
                            <label class="form-check-label" asp-for="Novel.PrimeRead" title="只有付費會員才能閱讀最新章節">@Html.DisplayNameFor(model => model.Novel.PrimeRead)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Novel.End" />
                            <label class="form-check-label" asp-for="Novel.End">@Html.DisplayNameFor(model => model.Novel.End)</label>
                        </div>
                    </div>

                    <div class="form-group d-flex justify-content-end">
                        <a asp-page="./Details" asp-route-id="@Model.Novel.NovelID" class="btn btn-secondary mr-2">取消</a>
                        <input type="submit" value="儲存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}