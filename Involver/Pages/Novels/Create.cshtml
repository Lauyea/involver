@page
@model Involver.Pages.Novels.CreateModel

@{
    ViewData["Title"] = "新創作";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string UserID = userManager.GetUserId(User);
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">新創作</h1>
                    <a asp-page="Index" class="btn btn-sm btn-outline-secondary"><i class="fas fa-list"></i> 回到清單</a>
                </div>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" class="needs-recaptcha" data-sitekey="@Configuration["reCAPTCHA-SiteKey"]" data-action="CreateNovel">
                    <div class="alert alert-danger" role="alert">
                        <strong>注意！</strong> 使用被版權保護的二次創作不能獲得收益，平台不負任何侵權責任。
                    </div>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    <input type="hidden" value="@UserID" asp-for="Novel.ProfileID" />

                    <div class="form-group">
                        <label asp-for="Novel.Title" class="control-label"></label>
                        <input asp-for="Novel.Title" class="form-control" />
                        <span asp-validation-for="Novel.Title" class="text-danger"></span>
                        <small class="form-text text-warning"><strong>作品名稱一旦設定便無法更改。</strong></small>
                    </div>
                    <div class="form-group">
                        <label asp-for="Novel.Introduction" class="control-label"></label>
                        <textarea asp-for="Novel.Introduction" class="form-control" rows="6" placeholder="在這裡寫些東西..."></textarea>
                        <span asp-validation-for="Novel.Introduction" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Novel.ImageUrl" class="control-label"></label>
                        <input asp-for="Novel.ImageUrl" class="form-control" />
                        <span asp-validation-for="Novel.ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Novel.Type" class="control-label"></label>
                        <select asp-for="Novel.Type" asp-items="Model.Types" class="form-select"></select>
                        <span asp-validation-for="Novel.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagString" class="control-label"></label>
                        <input asp-for="TagString" class="form-control" />
                        <span asp-validation-for="TagString" class="text-danger"></span>
                        <small class="form-text text-body-secondary">
                            請用半形逗號 (,) 分隔每個標籤，例如：標籤1,標籤2,標籤3。<br />
                            最多 @Parameters.TagSize 個標籤，每個標籤長度不超過 @Parameters.TagNameMaxLength 個字。
                        </small>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Novel.PrimeRead" />
                            <label class="form-check-label" asp-for="Novel.PrimeRead" title="只有付費會員才能閱讀最新章節">@Html.DisplayNameFor(model => model.Novel.PrimeRead)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Novel.Block" />
                            <label class="form-check-label" asp-for="Novel.Block" title="封鎖的創作會在列表上隱藏，但可以分享連結用作私人房間。如要解封請提出申請">@Html.DisplayNameFor(model => model.Novel.Block)</label>
                        </div>
                    </div>

                    <div class="form-group d-flex justify-content-end">
                        <a asp-page="Index" class="btn btn-secondary me-2">取消</a>
                        <button class="btn btn-primary" type="submit">建立</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["reCAPTCHA-SiteKey"]" async defer></script>
}