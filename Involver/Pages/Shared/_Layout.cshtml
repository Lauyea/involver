@inject UserManager<InvolverUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    @if (UserManager.GetUserAsync(User).Result != null)
    {
        @if (!UserManager.GetUserAsync(User).Result.Prime)
        {
            //Google AdSense
            <script data-ad-client="ca-pub-3010246710169742" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        }
    }
    else
    {
        <script data-ad-client="ca-pub-3010246710169742" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Involver - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/fontawesome-free-5.15.1-web/css/all.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
    <style>
        * {
            font-family: 'Microsoft JhengHei';
        }
        .video-container {
            position: relative;
            width: 100%;
            overflow: hidden;
            padding-top: 56.25%;
        }

        .responsive-iframe {
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
</head>
<body style="background-color:white;color:black">
    <header id="TopHead">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom @*box-shadow*@ mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Involver beta</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Novels/Index">創作</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Articles/Index">討論</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Announcements/Index">公告</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Feedbacks/Index">回報與意見</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Descriptions/AboutInvolver">關於 Involver</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-bottom:150px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <p>&copy; 2020 - Involver</p>
            <a asp-area="" asp-page="/Descriptions/Privacy">隱私政策</a>
            -
            <a asp-area="" asp-page="/Descriptions/Terms">服務條款</a>
            -
            <a asp-area="" asp-page="/Descriptions/Content">內容政策</a>
            -
            <a asp-area="" asp-page="/Descriptions/Explanation">說明</a>
            -
            <a asp-area="" asp-page="/Descriptions/Recruit">徵才</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
    @Html.PageScripts()
</body>
</html>
