@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    @{
        var currentPath = HttpContextAccessor.HttpContext.Request.Path.Value;
        bool showAdsOnToolPages = currentPath.StartsWith("/Functions");
    }

    @if (showAdsOnToolPages)
    {
        //Google AdSense
        @if (userManager.GetUserAsync(User).Result != null)
        {
            @if (!userManager.GetUserAsync(User).Result.Prime)
            {
                <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3010246710169742"
                        crossorigin="anonymous"></script>
            }
        }
        else
        {
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3010246710169742"
                    crossorigin="anonymous"></script>
        }
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Involver - @ViewData["Title"]</title>
    @{
        // 判斷是否為生產環境
        bool isProduction = WebHostEnvironment.IsProduction();

        // 根據環境設定 URL 和 Integrity Hash
        string vueUrl = isProduction
        ? "https://cdnjs.cloudflare.com/ajax/libs/vue/3.5.22/vue.esm-browser.prod.min.js"
        : "/lib/vue/vue.esm-browser.min.js"; // local

        string integrityHash = isProduction
        // 替換為 prod 檔案正確的 SHA-512 雜湊值
        ? "sha512-wPYDcdpwxrfjWOhuxSFpLvcaeBRD1IqFBjLhGe1XDfs6LO4KzDQCXxCqPJUgidYOqebx4yhFEAnaRjFBLrSf0Q=="
        : "";
    }

    <script type="importmap">
        {
            "imports": {
                "vue": "@vueUrl"
            },
            "integrity": {
                "@vueUrl": "@integrityHash"
            }
        }
    </script>
    
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment include="Staging,Production">
        <link rel="stylesheet"
              href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="visually-hidden"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous" />
    </environment>
    <link rel="stylesheet" href="~/lib/ckeditor5/CKContent.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" asp-append-version="true" href="~/css/site.css" />
    <script src="~/js/color-mode-toggler.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @RenderSection("Styles", required: false)
    <style>
        .video-container {
            position: relative;
            width: 100%;
            overflow: hidden;
            padding-top: 56.25%;
        }

        .responsive-iframe {
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        #gotop {
            position: fixed;
            z-index: 90;
            right: 30px;
            bottom: 31px;
            display: none;
            width: 50px;
            height: 50px;
            color: #fff;
            background-color: var(--primary-accent); /* 使用 CSS 變數 */
            line-height: 50px;
            border-radius: 50%;
            transition: all 0.5s;
            text-align: center;
            box-shadow: 0 2px 10px 0 rgba(0,0,0,0.15);
        }

            #gotop:hover {
                background-color: var(--primary-accent-hover); /* 使用 CSS 變數 */
                transform: translateY(-3px);
            }
    </style>
</head>

@{
    string returnRightFunction = ViewData["ReturnRightFunction"] != null ? "false" : "true";
}

<body id="layout-body" oncontextmenu="return @returnRightFunction" onselectstart="return @returnRightFunction">
    <div class="text-center" style="position: absolute;top: 15rem;right: 50%;z-index:100;">
        <div id="loading" class="spinner-border text-warning" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <header id="TopHead" class="sticky-top">
        <nav class="navbar navbar-expand-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="/favicon.ico" style="height:36px; margin-right: 5px;"> Involver</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Novels/Index">創作</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Articles/Index">討論</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Announcements/Index">公告</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Feedbacks/Index">回報與意見</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownTools" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                工具
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownTools">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Functions/CreateCover">製作小說封面</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Functions/MarkdownToHtml">Markdown轉換器</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Descriptions/AboutInvolver">關於 Involver</a>
                        </li>
                        @if (WebHostEnvironment.IsDevelopment())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-area="" asp-page="/Theme/Index">Theme</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="modal"></div>
    <div aria-live="polite" aria-atomic="true" style="position: fixed; bottom: 30px; right: 30px; min-width: 300px; z-index: 1030;">
        <div id="toast-container" style="position: absolute; bottom: 0; right: 0;">
        </div>
    </div>
    <div class="container mb-5 pb-5">
        <main role="main" class="pb-3">
            <partial name="_CookieConsentPartial" />
            @await Component.InvokeAsync("Breadcrumb")
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-body-secondary">
        <div class="container-fluid text-center">
            <div class="d-flex justify-content-center align-items-center flex-wrap">
                <span class="mx-2">&copy; 2020 - Involver</span>
                <a class="mx-2" asp-area="" asp-page="/Descriptions/Privacy">隱私政策</a>
                <a class="mx-2" asp-area="" asp-page="/Descriptions/Terms">服務條款</a>
                <a class="mx-2" asp-area="" asp-page="/Descriptions/Content">內容政策</a>
                <a class="mx-2" asp-area="" asp-page="/Descriptions/Explanation">說明</a>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment include="Staging,Production">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.bootstrap"
                integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
                crossorigin="anonymous"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/ckeditor5/build/ckeditor.js"></script>
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script src="~/js/form-validation.js" asp-append-version="true"></script>

    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function() {
            // 獲取所有相關 DOM 元素
            const loadingElement = document.getElementById('loading');
            const goTopButton = document.getElementById('gotop');
            const topHeadNav = document.querySelector('#TopHead nav');

            // 獲取 Toast 元素（注意：.toast 是一個選擇器，可能有多個）
            const toastElements = document.querySelectorAll('.toast');

            // 隱藏載入畫面
            if (loadingElement) {
                loadingElement.style.display = 'none';
            }

            // 顯示 Toast
            if (toastElements.length > 0) {
                toastElements.forEach(toastEl => {
                    const toast = new bootstrap.Toast(toastEl);
                    toast.show();
                });
            }

            // 啟用 Bootstrap Tooltips
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            if (tooltipTriggerList.length > 0) {
                tooltipTriggerList.forEach(tooltipTriggerEl => {
                    new bootstrap.Tooltip(tooltipTriggerEl);
                });
            }

            // --- 導覽列滾動效果 ---
            function handleNavScroll() {
                if (topHeadNav) {
                    if (window.scrollY > 50) {
                        topHeadNav.classList.add('navbar-scrolled');
                    } else {
                        topHeadNav.classList.remove('navbar-scrolled');
                    }
                }
            }

            // 綁定滾動事件
            window.addEventListener('scroll', handleNavScroll);

            // GoTop 按鈕出現/隱藏
            function handleGoTopVisibility() {
                if (goTopButton) {
                    if (window.scrollY > 400) {
                        goTopButton.style.display = 'block';
                        // goTopButton.style.opacity = '1';
                        // goTopButton.style.transition = 'opacity 1.4s'; // 這兩段無用。再想想看是否要有 fade in, fade out 效果
                    } else {
                        goTopButton.style.display = 'none'; // 簡單隱藏
                    }
                }
            }

            // 綁定滾動事件
            window.addEventListener('scroll', handleGoTopVisibility);

            // 頁面載入時執行一次，確保初始狀態正確
            handleGoTopVisibility();


            // GoTop 按鈕點擊平滑滾動
            if (goTopButton) {
                goTopButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth' // 啟用原生平滑滾動
                    });
                });
            }

            // 取 sticky nav 高度，避免 heading id anchor 被擋住
            const topHead = document.querySelector('#TopHead');
            const headerHeight = topHead ? topHead.offsetHeight + 16 : 0; // +16px，不要完全貼合 sticky nav

            // 寫到 root 的 CSS 變數
            document.documentElement.style.setProperty('--top-head-height', `${headerHeight}px`);

        });
    </script>
    <a href="#" id="gotop">
        <i class="fa fa-angle-up"></i>
    </a>

    @RenderSection("Scripts", required: false)
    @Html.PageScripts()
</body>
</html>
