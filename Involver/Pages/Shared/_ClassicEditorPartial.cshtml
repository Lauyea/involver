@* ClassicEditor Partial View for Razor Pages *@
@{
    // Required parameters: editorId, wordCountDivId, maxLength
    var editorId = ViewData["EditorId"] as string ?? "editor";
    var wordCountDivId = ViewData["WordCountDivId"] as string ?? "word-count";
    var maxLength = ViewData["MaxLength"] ?? 10000; // default max length
}
<script>
    ClassicEditor
        .create(document.querySelector('#@editorId'), {
            toolbar: {
                items: [
                    'heading',
                    '|',
                    'bold',
                    'italic',
                    'underline',
                    'strikethrough',
                    'fontBackgroundColor',
                    'fontColor',
                    'removeFormat',
                    'findAndReplace',
                    '|',
                    'alignment',
                    'bulletedList',
                    'numberedList',
                    'outdent',
                    'indent',
                    'horizontalLine',
                    '|',
                    'link',
                    'imageInsert',
                    'blockQuote',
                    'insertTable',
                    'mediaEmbed',
                    'sourceEditing',
                    'undo',
                    'redo'
                ]
            },
            link: {
                addTargetToExternalLinks: true
            },
            image: {
                toolbar: [
                    'imageTextAlternative',
                    'imageStyle:inline',
                    'imageStyle:block',
                    'imageStyle:side'
                ]
            },
            table: {
                contentToolbar: [
                    'tableColumn',
                    'tableRow',
                    'mergeTableCells'
                ]
            },
            licenseKey: '',
            mediaEmbed: {
                previewsInData: true
            },
            wordCount: {
                displayWords: false,
                onUpdate: stats => {
                    if (stats.characters > @maxLength) {
                        alert("輸入字元超過最大限制: @maxLength");
                    }
                }
            }
        })
        .then(editor => {
            window.editor = editor;
            const wordCountPlugin = editor.plugins.get('WordCount');
            const wordCountWrapper = document.getElementById('@wordCountDivId');
            if (wordCountPlugin && wordCountWrapper) {
                wordCountWrapper.appendChild(wordCountPlugin.wordCountContainer);
            }

            // 取得 textarea 元素
            const editorTextarea = document.getElementById('@editorId');

            // 監聽 'change:data' 事件，即時同步內容到 textarea
            editor.model.document.on('change:data', () => {
                editorTextarea.value = editor.getData();
            });
        })
        .catch(error => {
            console.error('Oops, something went wrong!');
            console.error(error);
        });
</script>
