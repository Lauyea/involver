@using Microsoft.AspNetCore.Identity
@using Involver.Data;
@inject SignInManager<InvolverUser> SignInManager
@inject UserManager<InvolverUser> UserManager

<ul class="navbar-nav mt-2 mt-md-0 my-2">
    @if (SignInManager.IsSignedIn(User))
    {
        
        <li class="nav-item mx-2">
            <script async src="https://cse.google.com/cse.js?cx=015953285050252692815:vji0k9v7dio"></script>
            <div class="gcse-search"></div>
        </li>

        var darkLinkHref ="javascript:document.getElementsByTagName('body')[0].setAttribute('class', 'bootstrap-dark');";
        var lightLinkHref = "javascript:document.getElementsByTagName('body')[0].setAttribute('class', 'bootstrap');";

        <li class="nav-item mx-2">
            <a class="nav-link"
                href="@darkLinkHref" onclick="SetDarkMode()" title="深色"><i class="fa-solid fa-moon"></i></a>
        </li>
        <li class="nav-item mx-2">
            <a class="nav-link"
                href="@lightLinkHref" onclick="SetDarkMode()" title="淺色"><i class="fa-solid fa-sun"></i></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Involvings/StoredValue">儲值</a>
        </li>
        <li class="nav-item">
            <div class="dropdown">
                <button type="button" class="nav-link btn btn-link" data-toggle="dropdown">
                    @UserManager.GetUserName(User)
                </button>
                <div class="dropdown-menu">
                    <a class="nav-link dropdown-item"
                       asp-area="Identity"
                       asp-page="/Profile/Index"
                       asp-route-id="@UserManager.GetUserId(User)"
                       title="Profile">個人檔案</a>
                    <a class="nav-link dropdown-item"
                       asp-area="Identity"
                       asp-page="/Account/Manage/Index"
                       title="Manage">帳號管理</a>
                    <form class="form-inline dropdown-item"
                          asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="nav-link btn btn-link">登出</button>
                    </form>
                </div>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <script async src="https://cse.google.com/cse.js?cx=015953285050252692815:vji0k9v7dio"></script>
            <div class="gcse-search"></div>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">註冊</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">登入</a>
        </li>
    }
</ul>

