@page
@model Involver.Pages.Feedbacks.CreateModel

@{
    ViewData["Title"] = "提出新意見";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string UserID = userManager.GetUserId(User);
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">提出新意見</h1>
                    <a asp-page="Index" class="btn btn-sm btn-outline-secondary"><i class="fas fa-list"></i> 回到清單</a>
                </div>
            </div>
            <div class="card-body">
                <form method="post" id="form">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" value="@UserID" asp-for="Feedback.ProfileID" />

                    <div class="form-group">
                        <label asp-for="Feedback.Title" class="control-label"></label>
                        <input asp-for="Feedback.Title" class="form-control" />
                        <span asp-validation-for="Feedback.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Feedback.Content" class="control-label"></label>
                        <textarea asp-for="Feedback.Content" id="editor" class="form-control" rows="12" placeholder="請詳細描述您遇到的問題或建議..."></textarea>
                        <div id="word-count" class="text-right text-muted"></div>
                        <span asp-validation-for="Feedback.Content" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-end">
                        <a asp-page="Index" class="btn btn-secondary mr-2">取消</a>
                        <button class="g-recaptcha btn btn-primary"
                                data-sitekey="@Configuration["reCAPTCHA-SiteKey"]"
                                data-callback='onSubmit'
                                data-action='submit'
                                type="submit">建立</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script>
        function onSubmit(token) {
            document.getElementById("form").submit();
        }
    </script>
    @{
        ViewData["EditorId"] = "editor";
        ViewData["WordCountDivId"] = "word-count";
        ViewData["MaxLength"] = Parameters.ArticleLength;
        await Html.RenderPartialAsync("_ClassicEditorPartial");
    }
}