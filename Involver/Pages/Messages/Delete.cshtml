@page
@model Involver.Pages.Messages.DeleteModel

@{
    ViewData["Title"] = "刪除";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <h1>刪除</h1>

    <h3>確定要刪除嗎？</h3>
<div>
    <h4>留言</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Content)
        </dt>
        <dd class="col-sm-10 ck-content">
            @Html.AntiXssRaw(Model.Message.Content.Replace("\r\n", "<br />"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.UpdateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.UpdateTime)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Message.MessageID" />
        <input type="submit" value="刪除" class="btn btn-danger" />
    </form>
</div>
