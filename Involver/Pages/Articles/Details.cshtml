@page
@model Involver.Pages.Articles.DetailsModel
@using Involver.Authorization
@using Involver.Common
@using Microsoft.AspNetCore.Authorization
@using Involver.Helpers
@inject IAuthorizationService AuthorizationService

@{ 
    ViewData["Title"] = Model.Article.Title;
    ViewData["From"] = Parameters.Articles;
    ViewData["FromId"] = Model.Article.ArticleID;
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["ReturnRightFunction"] = false;
}

<partial name="_Toasts" model="Model.Toasts" />
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="card mb-4">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0 text-break">@Html.DisplayFor(model => model.Article.Title)</h1>
            <div class="d-flex justify-content-end flex-wrap">
                <a asp-page="./Index" class="btn btn-sm btn-outline-secondary m-1" title="回到清單"><i class="fas fa-list"></i></a>
                <a href="#CommentHead" class="btn btn-sm btn-outline-info m-1" title="評論"><i class="fas fa-comment"></i></a>
                @if ((await AuthorizationService.AuthorizeAsync(User, Model.Article, ArticleOperations.Update)).Succeeded)
                {
                    <a asp-page="./Edit" asp-route-id="@Model.Article.ArticleID" class="btn btn-sm btn-outline-primary m-1" title="編輯"><i class="fas fa-edit"></i></a>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Model.Article, ArticleOperations.Delete)).Succeeded)
                {
                    <a asp-page="./Delete" asp-route-id="@Model.Article.ArticleID" class="btn btn-sm btn-outline-danger m-1" title="刪除"><i class="fas fa-trash-alt"></i></a>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, Model.Article, ArticleOperations.Block)).Succeeded)
                {
                    <form method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Article.ArticleID" />
                        @if (Model.Article.Block)
                        {
                            <input type="hidden" name="block" value="false" />
                            <button type="submit" class="btn btn-sm btn-success m-1" title="Unblock"><i class="fas fa-check-circle"></i></button>
                        }
                        else
                        {
                            <input type="hidden" name="block" value="true" />
                            <button type="submit" class="btn btn-sm btn-warning m-1" title="Block"><i class="fas fa-ban"></i></button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="text-muted mb-3">
            <small>
                作者：
                <a asp-area="Identity" asp-page="/Profile/Index" asp-route-id="@Model.Article.ProfileID">
                    @Model.Article.Profile.UserName
                </a>
            </small>
            <small class="ml-3">
                發布於：<span title="@Model.Article.UpdateTime">@TimePeriodHelper.Get(Model.Article.UpdateTime)</span>
            </small>
        </div>

        <article class="ck-content mb-4">
            @if (Model.Article.Content != null)
            {
                @Html.AntiXssRaw(Model.Article.Content.Replace("\r\n", "<br />"))
            }
        </article>

        <div>
            @foreach (var tag in Model.Article.ArticleTags)
            {
                <a asp-page="./Index" asp-route-currentFilter="@tag.Name" class="badge badge-info mr-1">@tag.Name</a>
            }
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <span class="mr-2">本月 InCoin: @Html.DisplayFor(model => model.Article.MonthlyCoins)</span>
                <a class="btn btn-sm btn-danger mr-2" asp-page="/Involvings/InvolveArticle" asp-route-id="@Model.Article.ArticleID">
                    <i class="fas fa-coins"></i> Involve
                </a>
                <div class="dropdown">
                    <button type="button" class="btn btn-sm btn-outline-info dropdown-toggle" data-toggle="dropdown">
                        Involvers
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-page="/Involvings/ArticleInvolvers" asp-route-id="@Model.Article.ArticleID">最近</a>
                        <a class="dropdown-item" asp-page="/Involvings/ArticleInvolvers" asp-route-id="@Model.Article.ArticleID" asp-route-TimeSpan="Monthly">每月</a>
                        <a class="dropdown-item" asp-page="/Involvings/ArticleInvolvers" asp-route-id="@Model.Article.ArticleID" asp-route-TimeSpan="TotalTime">總共</a>
                    </div>
                </div>
            </div>

            <div class="d-flex align-items-center">
                @{
                    string shareUrl = $"https://involver.tw/Articles/Details?id={Model.Article.ArticleID}";
                }
                <button class="btn btn-sm btn-outline-secondary btn-copy-link mr-2"
                        data-type="Article"
                        data-id="@Model.Article.ArticleID"
                        type="button"
                        title="複製連結成功">
                    <i class="fas fa-copy"></i> 分享
                </button>
                <div class="fb-share-button" data-href="@shareUrl" data-layout="button_count"></div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("CommentSection", new { from = Parameters.Articles, fromID = Model.Article.ArticleID })

<div id="fb-root"></div>

@section Scripts{
    <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
}