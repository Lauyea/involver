@page
@model Involver.Pages.Articles.EditModel
@using Involver.Authorization
@using Involver.Common

@{
    ViewData["Title"] = "編輯文章";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/@@yaireo/tagify/dist/tagify.css" rel="stylesheet" type="text/css" />
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">編輯文章</h1>
                    <div>
                        <a asp-page="./Details" asp-route-id="@Model.Article.ArticleID" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i> 回到文章</a>
                        <a asp-page="./Index" class="btn btn-sm btn-outline-secondary"><i class="fas fa-list"></i> 回到清單</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" class="needs-recaptcha" data-sitekey="@Configuration["reCAPTCHA-SiteKey"]" data-action="EditArticle">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    <input type="hidden" asp-for="Article.ArticleID" />
                    <input type="hidden" asp-for="Article.ProfileID" />

                    <div class="mb-3">
                        <label asp-for="Article.Title" class="form-label"></label>
                        <input asp-for="Article.Title" class="form-control" />
                        <span asp-validation-for="Article.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Article.Content" class="form-label"></label>
                        <textarea asp-for="Article.Content" id="editor" class="form-control" rows="12" placeholder="在這裡寫些東西..."></textarea>
                        <div id="word-count" class="text-end text-body-secondary"></div>
                        <span asp-validation-for="Article.Content" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Article.ImageUrl" class="form-label"></label>
                        <input asp-for="Article.ImageUrl" class="form-control">
                        <span asp-validation-for="Article.ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TagString" class="form-label"></label>
                        <input asp-for="TagString" class="form-control" />
                        <span asp-validation-for="TagString" class="text-danger"></span>
                        <small class="form-text text-body-secondary">
                            新增標籤請按 Enter，或貼上以逗號分隔的標籤。<br />
                            最多 @Parameters.TagSize 個標籤，每個標籤長度不超過 @Parameters.TagNameMaxLength 個字。
                        </small>
                    </div>

                    @if (User.IsInRole(Authorization.Article.Articles.ArticleManagersRole) ||
                         User.IsInRole(Authorization.Article.Articles.ArticleAdministratorsRole))
                    {
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="Article.Block" />
                            <label class="form-check-label" asp-for="Article.Block">@Html.DisplayNameFor(model => model.Article.Block)</label>
                        </div>
                    }

                    <div class="mb-3 d-flex justify-content-end">
                        <a asp-page="./Details" asp-route-id="@Model.Article.ArticleID" class="btn btn-secondary me-2">取消</a>
                        <input type="submit" value="儲存" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify/dist/tagify.polyfills.min.js"></script>
    <script>
        // 找到要被 Tagify 取代的 input 元素
        var input = document.querySelector('input[name="TagString"]');

        // Tagify 的設定
        var tagifySettings = {
            maxTags: @Parameters.TagSize,
            dropdown: {
                maxItems: 20,           // 建議選單中最多顯示的項目數量
                classname: "tags-look", // 自訂建議選單的 CSS class
                enabled: 0,             // 輸入框 focus 時就顯示建議
                closeOnSelect: false    // 選擇後不關閉建議選單
            },
            // 新增標籤時的提醒
            hooks: {
                add: function(e) {
                    if (e.detail.isNew) {
                        // 您可以在這裡加入更友善的提示，例如使用 Toast 通知
                        console.log('新標籤已加入:', e.detail.data.value);
                    }
                }
            }
        };

        // 異步載入白名單 (whitelist)
        async function loadWhitelist() {
            try {
                const response = await fetch('/api/tags/search?type=article');
                const whitelist = await response.json();
                
                // 將載入的白名單加入設定中
                tagifySettings.whitelist = whitelist;

                // 初始化 Tagify
                new Tagify(input, tagifySettings);

            } catch (error) {
                console.error('無法載入標籤白名單:', error);
                // 即使載入失敗，也初始化 Tagify (只是沒有建議列表)
                new Tagify(input, tagifySettings);
            }
        }

        // 執行載入與初始化
        loadWhitelist();
    </script>
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["reCAPTCHA-SiteKey"]" async defer></script>
    @{
        ViewData["EditorId"] = "editor";
        ViewData["WordCountDivId"] = "word-count";
        ViewData["MaxLength"] = Parameters.ArticleLength;
        await Html.RenderPartialAsync("_ClassicEditorPartial");
    }
}